						"header": [
							{ "key": "X-API-Key", "value": "{{api_key}}" },
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Jajan\",\n    \"type\": \"expense\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/categories",
							"host": ["{{base_url}}"],
